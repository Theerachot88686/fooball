// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// ตารางลูกค้า
model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  rentals   Rental[]
}

// ตารางสนามฟุตบอล
model FootballField {
  id        Int      @id @default(autoincrement())
  fieldName String
  address   String
  rentals   Rental[]
}

// ตารางรายการเช่า
model Rental {
  id             Int      @id @default(autoincrement())
  customer       Customer @relation(fields: [customerId], references: [id])
  customerId     Int
  field          FootballField @relation(fields: [fieldId], references: [id])
  fieldId        Int
  rentalDateTime DateTime
  duration       Int      // ระยะเวลาเช่า (เช่น จำนวนชั่วโมง)
  totalPrice     Float
}
